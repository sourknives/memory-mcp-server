# Cortex MCP Server Configuration

# Server Configuration
MEMORY_SERVER_HOST=localhost
MEMORY_SERVER_PORT=8000
MEMORY_SERVER_DEBUG=false

# Database Configuration
DATABASE_PATH=./data/memory.db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# AI/ML Model Configuration
MODELS_PATH=./models
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu
VECTOR_STORE_TYPE=faiss

# Security Configuration
ENCRYPTION_KEY_FILE=./data/encryption.key
API_KEY_REQUIRED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/memory-server.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Optional: External API Keys (for enhanced features)
# OPENAI_API_KEY=your_openai_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here

# Optional: Ollama Configuration (for local LLM)
# OLLAMA_HOST=http://localhost:11434
# OLLAMA_MODEL=llama3.2:1b